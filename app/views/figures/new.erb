<h1>Create a Figure!</h1>

<form method="post" action="/figures">
  <p><label for="name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name"></p>

  <h3>Landmarks</h3>
    <ul>
      <% Landmark.all.each do |landmark| %>
        <li><label><%= landmark.name %></label>
        <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>"></li>
      <% end %>
    </ul>

  <h3>Create New Landmark:</h3>
    <label for="name">Name: </label>
    <input type="text" name="landmark[name]" id="new_landmark">
    <label for="year">Year Completed: </label>
    <input type="text" name="landmark[year_completed]">

  <h3>Titles</h3>
    <ul>
      <% Title.all.each do |title| %>
        <li><label><%= title.name %></label>
        <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>"></li>
      <% end %>
    </ul>

  <h3>Create New Title:</h3>
  <input type="text" name="title[name]" id="new_title">

  <input type="submit" value="Create New Figure">
</form>